= form_for @ticket do |f|

  .ticket-category-form
    .service-select
      = f.select :service, @services, prompt: "select a service"

    - if @categories.present?
      .category-select
        = f.select :category, @categories, prompt: "select a category"

  .title-field.field
    = f.label :title
    = f.text_field :title, required: true

  .description-field.field
    = f.label :description
    = f.text_area :description, required: true

  .form-actions
    = f.submit
    or
    = link_to "Cancel", :back